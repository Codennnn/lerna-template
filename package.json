{
  "name": "lerna-pratice",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "dumi dev",
    "build:changed": "lerna run build --since main --include-dependencies",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "release": "yarn build:changed && git switch main && lerna publish",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,less,scss}": [
      "stylelint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@rollup/plugin-strip": "^2.1.0",
    "cz-conventional-changelog": "3.3.0",
    "dumi": "^1.1.25",
    "father-build": "^1.19.8",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prefer-code-style": "^0.4.2",
    "typescript": "^4.3.5"
  }
}
